{
  "version": 2,
  "public": true,
  "trailingSlash": false,
  "cleanUrls": false,
  "routes": [
    { "handle": "filesystem" },
    { "src": "/$", "dest": "/site/index.html" },
    { "src": "/robots\\.txt", "dest": "/site/robots.txt" },
    { "src": "/sitemap\\.xml", "dest": "/site/sitemap.xml" },
    { "src": "/static/(.*)", "dest": "/site/static/$1" },
    { "src": "/(.*)", "dest": "/site/$1" }
  ],
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)\\.css",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=300" }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=300" }
      ]
    }
  ]
}
