{
  "version": 2,
  "public": true,
  "trailingSlash": false,
  "cleanUrls": false,
  "rewrites": [
    { "source": "/", "destination": "/site/index.html" },
    { "source": "/robots.txt", "destination": "/site/robots.txt" },
    { "source": "/sitemap.xml", "destination": "/site/sitemap.xml" },
    { "source": "/static/:path*", "destination": "/site/static/:path*" },
    { "source": "/:path*", "destination": "/site/:path*" }
  ],
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)\\.css",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=300" }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=300" }
      ]
    }
  ]
}
